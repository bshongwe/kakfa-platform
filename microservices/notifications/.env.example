# Kafka Configuration
KAFKA_BROKERS=kafka-cluster-kafka-bootstrap.kafka.svc.cluster.local:9092
KAFKA_CLIENT_ID=payments-service
KAFKA_GROUP_ID=payments-service-group
KAFKA_SASL_USERNAME=payments-service-user
KAFKA_SASL_PASSWORD=
KAFKA_SASL_MECHANISM=SCRAM-SHA-512

# Kafka Topics
KAFKA_TOPIC_PAYMENTS_REQUESTED=payments.payment-requested
KAFKA_TOPIC_PAYMENTS_PROCESSED=payments.payment-processed
KAFKA_TOPIC_PAYMENTS_FAILED=payments.payment-failed
KAFKA_TOPIC_AUDIT=audit.payment-events

# Service Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info
SERVICE_NAME=payments-service

# Health Check
HEALTHCHECK_TIMEOUT_MS=5000

# Metrics
METRICS_PORT=9090

# Schema Registry
SCHEMA_REGISTRY_URL=http://schema-registry.kafka.svc.cluster.local:8081
